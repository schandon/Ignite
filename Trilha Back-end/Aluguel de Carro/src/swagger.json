  "paths": {
    "/categories":{
      "post":{
        "tags": ["Category"],
        "summary":"Create a category",
        "description":"Create a new category",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "description":{
                    "type":"string"
                  }
                },
                "examples":{
                  "name":"category name sample",
                  "description":"Description of the category"
                }
              }
            }
          }
        },
        "responses":{
          "201":{
            "description":"Category created"
          },
          "500":{
            "description":"Category Already exists"
          }
        }
      },
      "get":{
        "tags": ["Category"],
        "summary":"Lsit all categories",
        "description":"Get all categories",
        "responses":{
          "200":{
            "description":"Success",
            "content":{
              "application/json":{
                "schema":{
                  "type":"array",
                  "items":{
                    "types":"object",
                    "properties":{
                      "name":{
                        "type":"string"
                      },
                      "description":{
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
